{
  "manifest_version": 2,
  "name": "SiteHashPW",
  "version": "1.4.`git log --oneline | wc -l`",
  "version_name": "`git describe --always --dirty`",

  "description": "A hash based password manager that generates unique passwords per website instead of storing them in a database.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "browser_action": {
    "default_title": "SiteHashPW",
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S"
      }
    }
  },

  "background": {
    "persistent": true,
    "scripts": [
      "argon2-browser/lib/argon2.js",
      "crypto-js/core.js",
      "crypto-js/x64-core.js",
      "crypto-js/cipher-core.js",
      "crypto-js/hmac.js",
      "crypto-js/sha256.js",
      "crypto-js/enc-base64.js",
      "crypto-js/format-hex.js",
      "sitehashpw.js",
      "sitehashpw-extension.js"
    ]
  },

  "homepage_url": "https://github.com/divVerent/sitehashpw/",

  "incognito": "spanning",

  "options_page": "sitehashpw-extension-options.html",

  "permissions": [
    "activeTab",
    "storage"
  ]
}
